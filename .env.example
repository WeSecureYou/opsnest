# Database - Choose one option:
# Option 1: MongoDB
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/opsnest"

# Option 2: Supabase (PostgreSQL)
# DATABASE_URL="postgresql://user:password@host:5432/opsnest"

# NextAuth Configuration
NEXTAUTH_SECRET=your-super-secret-random-key-here-min-32-chars
NEXTAUTH_URL=http://localhost:3000

# Environment
NODE_ENV=development

# Email Configuration (Optional - for notifications)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@opsnest.io

# OR use SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./public/uploads

# Optional: Sentry for error tracking
SENTRY_DSN=

# Optional: Analytics
ANALYTICS_ENABLED=false
